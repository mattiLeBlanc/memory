{
  "name": "memory",
  "version": "1.0.0",
  "description": "memory match game",
  "main": "main.js",
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/input.css -o ./dist/styles.css --minify && mkdir -p dist && cp src/index.html dist/index.html && mkdir -p dist/assets && cp -R src/assets dist/",
    "build:js": "tsc",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/styles.css --minify",
    "dev:css": "tailwindcss -i ./src/input.css -o ./styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Mattijs Spierings",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3"
  }
}
